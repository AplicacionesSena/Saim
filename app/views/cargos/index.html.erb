<% if current_user.email == "Saim@gmail.com" %>
<h1>Listing cargos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Privilegiover</th>
      <th>Privilegioeditar</th>
      <th>Privilegioeleminar</th>
      <th>Privilegiocrear</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cargos.each do |cargo| %>
      <tr>
        <td><%= cargo.nombre %></td>
        <td><%= cargo.descripcion %></td>
        <td><%= cargo.privilegioVer %></td>
        <td><%= cargo.privilegioEditar %></td>
        <td><%= cargo.privilegioEleminar %></td>
        <td><%= cargo.privilegioCrear %></td>
        <td><%= link_to 'Show', cargo %></td>
        <td><%= link_to 'Edit', edit_cargo_path(cargo) %></td>
        <td><%= link_to 'Destroy', cargo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cargo', new_cargo_path %>
<% else %>
    <div class="panel panel-danger">
        <div class="panel-heading">Acceso Denegado</div>
        <div class="panel-body">
            <p>No Esta Autorizado Para Entrar En Este Sitio</p>
        </div>
      </div>
<% end %>