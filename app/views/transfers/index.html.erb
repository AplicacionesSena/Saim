<div class="fondc2" >
<h1>Listado De Traspasos</h1>

<div class="panel-body contabla">
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th class="centro">Nombre Elemento</th>
          <th class="centro">Cuentadante Origen</th>
          <th class="centro">Cuentadante Destino</th>
          <th class="centro">Fecha De Traspaso</th>
          <th class="centro">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @transfers.each do |transfer| %>
          <tr>
            <td><%= transfer.elemento.nombre %></td>
            <td><%= transfer.cuentaorigen %></td>
            <td><%= transfer.cuentadante.nombre %></td>
            <td><%= transfer.fechaTraspaso %></td>
            <td>
              <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown"><%= image_tag("opcion.png", height: '10', width: '18', class: 'img1')%>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li>
                    <a href="#">
                      <%= button_to 'Ver', elemento_transfer_path(@elemento,transfer), method: "get", class: 'btn btn-info bottam'%>
                    </a>
                  </li>
                  <% if can? :update, transfer %>
                  <li class="divider"></li>
                  <li>
                    <a href="#">
                      <%= button_to 'Editar', edit_elemento_transfer_path(@elemento,transfer), method: "get", class: 'btn btn-warning bottam2' %>
                    </a>
                  </li>
                  <% end %>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= button_to 'Nuevo Traspaso', new_elemento_transfer_path(@elemento), method: "get", class: 'btn btn-primary' %>
</div>
