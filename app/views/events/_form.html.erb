<%= simple_form_for(@event, :html => { :class => 'form-horizontal', remote: true } ) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Titulo %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Descripcion %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <label>Persona A Cargo</label><br>
    <%= f.collection_select :user_id, User.all, :id, :nombre, class: "form-control", prompt: "Seleccione una Persona" %>
  </div>
  <div class="field">
    <%= f.label :Fecha_De_Inicio %><br>
    <%= f.datetime_select :start %>
  </div>
  <div class="field">
    <%= f.label :Fecha_De_Finalizacion %><br>
    <%= f.datetime_select :end %>
  </div>
  <div class="actions">
    <%= f.submit  "Guardar"%>
  </div>
<% end %>
