<div class="fondc1">
<h1>Listado De Tipo De Documentos</h1>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr class="success">
            <th class="centro">Sigla</th>
            <th class="centro">Descripcion</th>
            <th colspan="3" class="centro">Opciones</th>
          </tr>
        </thead>

        <tbody>
          <% @tipo_docs.each do |tipo_doc| %>
            <tr>
              <td><%= tipo_doc.sigla %></td>
              <td><%= tipo_doc.descripcion %></td>
              <td><%= button_to 'Ver', tipo_doc, method: "get", class: 'btn btn-info' %></td>
              <td><%= button_to 'Editar', edit_tipo_doc_path(tipo_doc), method: "get", class: 'btn btn-warning' %></td>
              <td><%= button_to 'Eliminar', tipo_doc, method: :delete, data: { confirm: 'Are you sure?', method: "get" }, class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>

  <%= button_to 'Nuevo Tipo De Documento', new_tipo_doc_path, method: "get", class: 'btn btn-primary' %>
</div>

