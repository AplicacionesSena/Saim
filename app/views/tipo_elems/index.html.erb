<% if current_user.email == "Saim@gmail.com" %>
<div class="fondc1">
<h1>Listado De Tipos De Elementos</h1>
<div class="panel-body">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr class="success">
            <th class="centro">Nombre</th>
            <th class="centro">Descripcion</th>
            <th colspan="3" class="centro">Opciones</th>
          </tr>
        </thead>

        <tbody>
          <% @tipo_elems.each do |tipo_elem| %>
            <tr>
              <td><%= tipo_elem.nombre %></td>
              <td><%= tipo_elem.descripcion %></td>
              <td><%= button_to 'Ver', tipo_elem, method: "get", class: 'btn btn-info' %></td>
              <td><%= button_to 'Editar', edit_tipo_elem_path(tipo_elem), method: "get", class: 'btn btn-warning' %></td>
              <td><%= button_to 'Eliminar', tipo_elem, method: :delete, data: { confirm: 'Are you sure?', method: "get" }, class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
<br>

<%= button_to 'Nuevo Tipo De Elemento', new_tipo_elem_path, method: "get", class: 'btn btn-primary' %>
</div>
<% else %>
    <div class="panel panel-danger">
        <div class="panel-heading">Acceso Denegado</div>
        <div class="panel-body">
            <p>No Esta Autorizado Para Entrar En Este Sitio</p>
        </div>
      </div>
<% end %>