<div class="conthistory">
  <div class="table-responsive">
  <table class="table">
          <thead>
            <tr class="info">
              <th class="centro">Historial Elementos Creados</th>
            </tr>
          </thead>
  
          <tbody>
            <% @elementos.each do |elemento| %>
              <tr>
                <td class="centro success"><p>Se creo un elemento el <%= elemento.created_at %></p></td>
              </tr>
            <% end %>
          </tbody>
  </table>
  </div>
  
  <br>
  
  <div class="table-responsive">
  <table class="table">
          <thead>
            <tr class="info">
              <th class="centro">Historial Elementos Modificcados</th>
            </tr>
          </thead>
  
          <tbody>
            <% @elementos.each do |elemento| %>
              <tr>
                <td class="centro danger"><p>Se edito un elemento el <%= elemento.created_at %></p></td>
              </tr>
            <% end %>
          </tbody>
  </table>
  </div>
</div>
