<%= form_for [@floor,@area] do |f| %>
  <% if @area.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@area.errors.count, "error") %> prohibited this area from being saved:</h2>

      <ul>
      <% @area.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">
        <div class="col-md-4 col-sm-4">
          <div class="panel panel-default">
            <div class="panel-heading">
            <% if @area.nombre == nil %>
              <h3 class="centro">Campos Para Registrar Un Area</h3>
            <% else %>
              <h3 class="centro">Campos Para Editar Un Area</h3>
            <% end %>
            </div>
            <div class="panel-body">
              <form role="form">
                <div class="form-group mo0">
                  <%= f.label :nombre %><br>
                  <%= f.text_field :nombre, class: 'form-control tams' %>
                </div>
                <div class="form-group mov01-3">
                  <%= f.label :shape %><br>
                  <%= f.text_field :shape, class: 'form-control tams' %>
                </div>
                <div class="form-group mov3-2">
                  <%= f.label :coords %><br>
                  <%= f.text_field :coords, class: 'form-control tams' %>
                </div>
                <div class="form-group fm4">
                  <%= f.label :Imagen_Area%><br>
                  <div class="filefoto">
                  <%= f.file_field :image %>
                  </div>
                </div>
                <% if @area.nombre == nil %>
                  <div class="actions mo0g">
                    <%= f.submit "Guardar", class: "btn btn-success" %>
                  </div>
                <% else %>
                  <div class="actions mo0g">
                    <%= f.submit "Actualizar", class: "btn btn-warning" %>
                  </div>              
                <% end %>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
